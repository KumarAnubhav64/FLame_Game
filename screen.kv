
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
WindowManager:
    transition : WipeTransition(duration =0.8)
    LoadWindow:
    FirstWindow:
    ResultWindow:
<LoadWindow>
    name : "load"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/Picture2.png'
    
    BoxLayout:
        padding: ('10dp', '50dp', '0dp', '150dp')
        orientation: 'vertical'
        size: root.width,root.height
        Image:
            source:"images/Splash.png"
            width:400
        Button:
            size_hint: 0.5,0.05
            text:'Next'
            pos_hint : {'center_x':0.5,'center_y':0}
            on_release: root.start_release()
            on_press: 
                app.root.current = "first"
            Image:
                id: Start
                source:"images/Start.png"
                allow_stretch  :True
                width : 400
                center_x: self.parent.center_x
                center_y : self.parent.center_y
        # Label:
        # ProgressBar:
        #     id: ProgressBar
        #     min:0
        #     max:1
        #     value:.25
        #     pos_hint:{'x':0.1}
        #     size_hint_x: 0.8
        #     background_color: (1,0,0,1)
        #     background_normal: None


<FirstWindow>:
    name :"first"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/Picture1.png'

    BoxLayout:
        orientation:'vertical'
        size : root.width , root.height

        Label:
            markup : True
            text:''
            font_size : 40
            padding: 0
            spacing :0
            size_hint: 0,1
            

        GridLayout:
            row : 3
            cols : 2
            Image:
                source: 'images/sama.png'
                size_hint_x : 0.3
                size_hint_y : 0.3
                padding: 100


            Image:
                source: 'images/shiro.png'

                size_hint_x : 0.2
                size_hint_y : 0.2
                padding: ('50','100')
                spacing : ('100','100')
            Label:
                text:''
                size_hint : 0.1,0.1
            Label:
                text:''    
                size_hint : 0,0.1
            TextInput:
                id: Her
                background_color : (0,0,0,0.03)
                foreground_color : (1,1,1,1)
                multiline: False
                text:'Her'
                size_hint: 0.1,0.1
                padding: 10
                spacing : 10
                halign : 'center'
                font_name: 'asset\Affectionately Yours - TTF.ttf'
                # on_focus: self.text = '' if args else self.text
                font_size : 45
                font_color : (1,1,1,1)
            TextInput:
                id: Him
                background_color : (0,0,0,0.03)
                foreground_color : (1,1,1,1)
                multiline: False
                text:'Him'            
                size_hint: 0,0.1
                padding: 10
                spacing : 10
                halign : 'center'
                font_name: 'asset\Affectionately Yours - TTF.ttf'
                # on_focus: self.text = '' if args else self.text
                font_size : 45
                font_color : (1,1,1,1)
        Label:
            text:''
            size_hint :0,0.1
                
  
        Button:
            text:'Flames'
            padding: 150
            spacing : 100
            on_press: root.FlameLogic()
            size_hint: 0.5,0.13
            font_size : 40
            pos_hint : {'center_x':0.5,'center_y':0}
            on_release : 
                app.root.current = "ResultWindow"
                root.release()
            Image:
                id : Button_Image
                source:'images/Button_not_pressed.png'
                allow_stretch  :True
                width : 400
                center_x: self.parent.center_x
                center_y : self.parent.center_y
        # Label:
        #     text:''        

        Label:
            id: Match
            text: " "  
            font_name: 'asset\Affectionately Yours - TTF.ttf'
            opacity:0




            
<ResultWindow>
    id : result_window
    name : "ResultWindow"
    title : "Match"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/Picture2.png'
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height
        padding: ('50dp', '50dp', '50dp', '100dp')
        Image:
            id: result_image
            source:"images/Marraige.png"
            allow_stretch:True
            width:300
            height:200
        Label:
            id : Result_Label
            text:'Result_Label'
            font_name: 'asset\Affectionately Yours - TTF.ttf'
            font_size: 100
                

        Button:
            text:'Reset'
            font_size: 40
            size_hint: 0.70,0.13
            pos_hint: {'center_x': 0.5,'pos_y': 0.5}
            on_release: 
                root.release()
                root.reset()
                app.root.current = "first"
            Image:
                id : Button_Image
                source:'images/Reset_on_press.png'
                allow_stretch  :True
                width : 400
                center_x: self.parent.center_x
                center_y : self.parent.center_y
        Label:
            text:''
            size_hint: 0.55,0.15
            
            
            

<RoundedButton@Button>
    background_color : (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba : (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius : [58]    
<RoundedTextInput@TextInput>
    background_color : (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba : (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius : [58]                                   
