#: import CardTransition kivy.uix.screenmanager.CardTransition
WindowManager:
    transition : CardTransition(duration =1)
    SplashWindow:
    FirstWindow:
    ResultWindow:
<SplashWindow>
    name : "splash"
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height

        Button:
            text:'Next'
            on_release: 
                app.root.current = "first"

            Image:
                id : Button_Image
                source:'images/transition.png'
                allow_stretch  :True
                width : 2000
                height : 6000
                center_x: self.parent.center_x
                center_y : self.parent.center_y
            Image:
                id : Result
                name : "Result_image"
                source:'images/Love_is_war.png'
                allow_stretch  :True
                width : 400
                height : 400
                center_x: self.parent.center_x
                center_y : self.parent.center_y
            

<FirstWindow>:
    name :"first"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/Picture1.png'

    BoxLayout:
        orientation:'vertical'
        size : root.width , root.height

        Label:
            markup : True
            text:''
            font_size : 40
            padding: 0
            spacing :0
            size_hint: 0,1
            

        GridLayout:
            row : 3
            cols : 2
            Image:
                source: 'images/sama.png'
                size_hint_x : 0.3
                size_hint_y : 0.3
                padding: 50
                spacing : 50

            Image:
                source: 'images/shiro.png'

                size_hint_x : 0.2
                size_hint_y : 0.2
                padding: ('100','100')
                spacing : ('100','100')
            Label:
                text:''
                size_hint : 0.1,0.1
            Label:
                text:''    
                size_hint : 0,0.1
            TextInput:
                id: Her
                background_color : (0,0,0,0.03)
                foreground_color : (1,1,1,1)
                multiline: False
                text:'Her'
                size_hint: 0.1,0.1
                padding: 10
                spacing : 10
                halign : 'center'
                font_name: 'asset\Affectionately Yours - TTF.ttf'
                # on_focus: self.text = '' if args else self.text
                font_size : 45
                font_color : (1,1,1,1)
            TextInput:
                id: Him
                background_color : (0,0,0,0.03)
                foreground_color : (1,1,1,1)
                multiline: False
                text:'Him'            
                size_hint: 0,0.1
                padding: 10
                spacing : 10
                halign : 'center'
                font_name: 'asset\Affectionately Yours - TTF.ttf'
                # on_focus: self.text = '' if args else self.text
                font_size : 45
                font_color : (1,1,1,1)
        Label:
            text:''
            size_hint :0,0.1
                
  
        Button:
            text:'Flames'
            padding: 100
            spacing : 100
            on_press: root.FlameLogic()
            size_hint: 0.5,0.13
            font_size : 40
            pos_hint : {'center_x':0.5,'center_y':0}
            on_release : 
                app.root.current = "ResultWindow"
                root.release()
            Image:
                id : Button_Image
                source:'images/Button_not_pressed.png'
                allow_stretch  :True
                width : 400
                center_x: self.parent.center_x
                center_y : self.parent.center_y
        # Label:
        #     text:''        

        Image:
            id: Match
            source: 'images/love_is_war.png'            


            
<ResultWindow>
    id : result_window
    name : "ResultWindow"
    title : "Match"
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height

        Button:
            text:'Next'
            on_release: 
                app.root.current = "first"

            Image:
                id : Button_Image
                source:'images/transition.png'
                allow_stretch  :True
                width : 2000
                height : 6000
                center_x: self.parent.center_x
                center_y : self.parent.center_y
            Image:
                id : Result
                name : "Result_image"
                source:'images/Love_is_war.png'
                allow_stretch  :True
                width : 400
                height : 400
                center_x: self.parent.center_x
                center_y : self.parent.center_y
            

<RoundedButton@Button>
    background_color : (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba : (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius : [58]    
<RoundedTextInput@TextInput>
    background_color : (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba : (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius : [58]                                   
